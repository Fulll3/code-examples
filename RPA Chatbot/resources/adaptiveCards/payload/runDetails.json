{
  "type": "AdaptiveCard",
  "body": [
      {
          "type": "TextBlock",
          "size": "Medium",
          "weight": "Bolder",
          "text": "{title}",
          "horizontalAlignment": "Center",
          "separator": true
      },
      {
          "type": "FactSet",
          "facts": [
              {
                  "$data": "{properties}",
                  "title": "{key}:",
                  "value": "{value}"
              }
          ],
          "height": "stretch",
          "separator": true
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}